{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts"
  ]
}
